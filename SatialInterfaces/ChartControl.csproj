<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Authors>Satial Interfaces</Authors>
        <Company>Satial Interfaces</Company>
        <Description>ChartControl is a chart control (line with markers) for Avalonia.</Description>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <PackageId>ChartControl.Avalonia</PackageId>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/satial-interfaces/ChartControl</RepositoryUrl>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Version>11.0.9</Version>
    </PropertyGroup>
    <ItemGroup>
        <None Remove=".gitignore" />
        <None Include="README.md" Pack="true" PackagePath="\" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Avalonia" Version="11.0.9" />
        <PackageReference Include="System.Reactive" Version="5.0.0" />
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Converters" />
    </ItemGroup>
</Project>
